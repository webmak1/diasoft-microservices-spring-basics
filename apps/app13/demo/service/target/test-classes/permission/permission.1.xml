<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <property name="varchar.prefix" value="N" dbms="mssql"/>
    <property name="varchar.prefix" value="" dbms="oracle,postgresql,sybase,db2,h2"/>
    <property name="clob.type" value="CLOB" dbms="oracle"/>
    <property name="clob.type" value="TEXT" dbms="mssql,postgresql,h2"/>

    <changeSet id="permission.1.1" author="svdovin" runInTransaction="false">
      	<validCheckSum>8:dfdd854614081168d3c77521a571ceaf</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rights_policyset"/>
            </not>
        </preConditions>
        <createTable tableName="rights_policyset">
            <column name="recordid" type="NUMERIC(19, 0)" remarks="Идентификатор записи">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_rights_policyset"/>
            </column>
            <column name="objectsysname" type="${varchar.prefix}VARCHAR(255)" remarks="Системное наименование бизнес-объекта">
                <constraints nullable="false"/>
            </column>
            <column name="policysetid" type="${varchar.prefix}VARCHAR(255)" remarks="Системное наименование набора политик доступа">
                <constraints nullable="false"/>
            </column>
            <column name="policysetbody" type="${clob.type}" remarks="Тело набора политик доступа в виде xml-строки">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex tableName="rights_policyset" indexName="k01_rights_policyset" unique="false">
            <column name="objectsysname"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>